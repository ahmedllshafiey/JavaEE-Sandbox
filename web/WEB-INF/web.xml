<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                              http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>Mode</filter-name>
        <filter-class>Filters.Mode</filter-class>
    </filter>
    <filter>
        <filter-name>Way</filter-name>
        <filter-class>Filters.Way</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Mode</filter-name>
        <servlet-name>Filter</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Way</filter-name>
        <servlet-name>Filter</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>Web.Servlet</servlet-class>
        <init-param>
            <param-name>Email</param-name>
            <param-value>example@example.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Cookies</servlet-name>
        <servlet-class>Web.Cookies</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Filter</servlet-name>
        <servlet-class>Web.Filter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Context</servlet-name>
        <servlet-class>Web.Context</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Context</servlet-name>
        <url-pattern>/Context</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>Name</param-name>
        <param-value>Example Context</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>Cookies</servlet-name>
        <url-pattern>/Cookies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Filter</servlet-name>
        <url-pattern>/Filter</url-pattern>
    </servlet-mapping>
</web-app>
